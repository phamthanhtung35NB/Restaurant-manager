<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_white_corner_16"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".DialogNotificationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_yellow_corner_16_top"
        android:gravity="center"
        android:padding="12dp"
        android:text="Sửa thông tin món ăn"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <ImageView
            android:id="@+id/imageViewFoodOrder"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/food_load" />

        <ProgressBar
            android:id="@+id/progressBarEditFood"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewId"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="id"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/textViewNameOrder"
                    android:layout_width="359dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="Name"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textViewPriceOrder"
                    android:layout_width="229dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="Price"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" VNĐ"
                    android:textStyle="italic" />
            </LinearLayout>

            <EditText
                android:id="@+id/textViewDescriptionOrder"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:hint="Mô tả"
                android:text="Mô tả" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#8E8C98"
            android:text="Hủy" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#337BC8"
            android:text="Lưu" />
    </LinearLayout>


</LinearLayout>