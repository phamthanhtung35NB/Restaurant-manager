<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:visibility="visible"
    android:paddingStart="10dp"
    android:paddingTop="2dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/item_background_food"
        android:elevation="4dp"
        android:outlineProvider="background"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageViewFoodOrder"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/food_load" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewId"
                    android:layout_width="27dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingStart="4dp"
                    android:text="id"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textViewNameOrder"
                    android:layout_width="132dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPriceOrder"
                    android:layout_width="91dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:gravity="center|right"
                    android:text="Price"
                    android:textColor="@color/black"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text=" VNĐ"
                    android:textColor="@color/black"
                    android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewDescriptionOrder"
                android:layout_width="167dp"
                android:layout_height="30dp"
                android:gravity="center|left"
                android:text="TextView"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="vertical">

            <Button
                android:id="@+id/imageButtonDelFood"
                android:layout_width="63dp"
                android:layout_height="36dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp"
                android:scaleType="center"
                android:text="Xóa"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>