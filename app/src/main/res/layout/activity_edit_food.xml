<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MenuRestaurant.Menu.EditFoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageViewFoodOrder"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/food_load" />

        <ProgressBar
            android:id="@+id/progressBarEditFood"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewId"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="id"
                    android:textStyle="bold|italic" />

                <EditText
                    android:id="@+id/textViewNameOrder"
                    android:layout_width="359dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="Name"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textViewPriceOrder"
                    android:layout_width="229dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="Price"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" VNĐ"
                    android:textStyle="italic" />
            </LinearLayout>

            <EditText
                android:id="@+id/textViewDescriptionOrder"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <Button
            android:id="@+id/imageButtonDelFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Xác nhận" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>