<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:visibility="visible"
    android:paddingStart="10dp"
    android:paddingTop="2dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/item_background_food"
        android:elevation="4dp"
        android:outlineProvider="background"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageViewFoodOrder"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/food_load" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewId"
                    android:layout_width="50dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingStart="6dp"
                    android:text="id"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textViewNameOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPriceOrder"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:autoText="false"
                    android:gravity="center|right"
                    android:text="Price"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:text=" VNĐ"
                    android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewDescriptionOrder"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextLoiNhanOrder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Lời nhắn"
                android:inputType="text" />

            <ImageButton
                android:id="@+id/imageButtonDelFood"
                android:layout_width="46dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideInset"
                android:verticalScrollbarPosition="right"
                android:visibility="visible"
                tools:srcCompat="@drawable/baseline_edit_calendar_24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>